---
import Layout from '../layouts/Layout.astro';
import { SEO } from 'astro-seo';
import Footer from '../components/Footer';

const title = "Page Not Found - Cheapify";
---

<Layout title={title}>
  <SEO
    title={title}
    description="The page you're looking for doesn't exist. Return to Cheapify to find the best vegan grocery deals."
  />

  <main class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="text-center">
      <h1 class="text-6xl font-bold text-gray-800 mb-4">404</h1>
      <h2 class="text-2xl font-semibold text-gray-600 mb-4">Page Not Found</h2>
      <p class="text-gray-500 mb-8">The page you're looking for doesn't exist.</p>
      <a 
        href="/" 
        class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-full font-medium transition-colors"
      >
        Return Home
      </a>
    </div>
  </main>
  <Footer client:load />
</Layout>