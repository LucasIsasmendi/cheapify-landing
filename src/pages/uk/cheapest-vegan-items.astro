---
import Layout from '../../layouts/Layout.astro';
import { SEO } from 'astro-seo';
import Footer from '../../components/Footer';
import CheapestItemsGrid from '../../components/CheapestItemsGrid';
import ContactSection from '../../components/ContactSection';

const title = "UK's Cheapest Vegan Items - Cheapify";

---

<Layout title={title}>
  <SEO
    title="UK's Cheapest Vegan Items | Compare Prices Across Supermarkets"
    description="Find the cheapest vegan items across UK supermarkets. Compare prices on plant-based foods, fruits, vegetables, and more with Cheapify's price comparison tool."
    openGraph={{
      basic: {
        title: "UK's Cheapest Vegan Items | Compare Prices Across Supermarkets",
        type: "website",
        image: "/images/cheapest-prices-share.jpg",
      },
      optional: {
        description: "Find the cheapest vegan items across UK supermarkets. Compare prices on plant-based foods, fruits, vegetables, and more.",
        siteName: "Cheapify",
      }
    }}
    twitter={{
      card: "summary_large_image",
      site: "@cheapifyapp",
      creator: "@cheapifyapp",
      title: "UK's Cheapest Vegan Items | Compare Prices",
